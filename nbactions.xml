<?xml version="1.0" encoding="UTF-8"?>
<actions>
        <action>
            <actionName>run.single</actionName>
            <goals>
                <goal>package</goal>
            </goals>
            <properties>
                <netbeans.deploy>true</netbeans.deploy>
                <maven.test.skip>true</maven.test.skip>
                <BASEDIR>.</BASEDIR>
                <netbeans.deploy.clientUrlPart>${webpagePath}</netbeans.deploy.clientUrlPart>
            </properties>
        </action>
        <action>
            <actionName>build</actionName>
            <goals>
                <goal>install</goal>
            </goals>
            <properties>
                <maven.test.skip>true</maven.test.skip>
            </properties>
        </action>
        <action>
            <actionName>clean</actionName>
            <goals>
                <goal>clean</goal>
            </goals>
            <properties>
                <maven.test.skip>true</maven.test.skip>
            </properties>
        </action>
        <action>
            <actionName>rebuild</actionName>
            <goals>
                <goal>clean</goal>
                <goal>install</goal>
            </goals>
            <properties>
                <maven.test.skip>true</maven.test.skip>
            </properties>
        </action>
        <action>
            <actionName>run</actionName>
            <goals>
                <goal>package</goal>
            </goals>
            <properties>
                <maven.test.skip>true</maven.test.skip>
                <netbeans.deploy>true</netbeans.deploy>
                <BASEDIR>${basedir}</BASEDIR>
            </properties>
        </action>
        <action>
            <actionName>debug</actionName>
            <goals>
                <goal>package</goal>
            </goals>
            <properties>
                <netbeans.deploy>true</netbeans.deploy>
                <maven.test.skip>true</maven.test.skip>
                <BASEDIR>${basedir}</BASEDIR>
                <netbeans.deploy.debugmode>true</netbeans.deploy.debugmode>
            </properties>
        </action>
        <action>
            <actionName>profile</actionName>
            <goals>
                <goal>package</goal>
            </goals>
            <properties>
                <maven.test.skip>true</maven.test.skip>
                <netbeans.deploy>true</netbeans.deploy>
                <netbeans.deploy.profilemode>true</netbeans.deploy.profilemode>
            </properties>
        </action>
    </actions>
